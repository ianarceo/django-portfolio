{
  "version": 2,
  "builds": [
    {
      "src": "portfolio/wsgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "portfolio/wsgi.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "static/$1"
    }
  ],
  "outputDirectory": "staticfiles_build"
}
